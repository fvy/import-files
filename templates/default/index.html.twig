{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Главная страница сайта</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_stat'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/stats/">
                        <i class="fa fa-users" aria-hidden="true"></i> Страница статистики
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_admin'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/admin/">
                        <i class="fa fa-lock" aria-hidden="true"></i> Административная часть
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}